@{
    ViewData["Title"] = "Password Reset Complete";
}

<section class="reset-confirmation-section mt-100" style="background: #f9f9f9; padding: 40px 0;">
    <div class="container" style="max-width: 600px; margin: auto; background: white; padding: 40px; border-radius: 8px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05); text-align: center;">
        <h3 style="color: #081828; margin-bottom: 20px;">Password Reset Successful</h3>
        <p style="line-height: 24px;">
            Your password has been successfully reset. You can now log in with your new credentials.
        </p>
        <a href="/Account/Login" class="btn mt-20" style="background-color: #0167F3; color: white; padding: 10px 25px; border-radius: 5px; font-size: 14px; font-weight: 500; border: none;">
            Go to Login
        </a>
    </div>
</section>

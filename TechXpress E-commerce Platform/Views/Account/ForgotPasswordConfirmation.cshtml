@{
    ViewData["Title"] = "Reset Link Sent";
}

<section class="forgot-confirmation-section mt-100" style="background: #f9f9f9; padding: 40px 0;">
    <div class="container" style="max-width: 600px; margin: auto; background: white; padding: 40px; border-radius: 8px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05); text-align: center;">
        <h3 style="color: #081828; margin-bottom: 20px;">Check Your Email</h3>
        <p style="line-height: 24px;">
            We’ve sent a password reset link to your email address. If you don’t receive it within a few minutes, check your spam folder.
        </p>
    </div>
</section>

@model TechXpress_E_commerce_Platform.View_Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<section class="reset-password-section mt-100" style="background: #f9f9f9; padding: 40px 0;">
    <div class="container" style="max-width: 600px; margin: auto; background: white; padding: 40px; border-radius: 8px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);">
        <h3 style="margin-bottom: 30px; color: #081828; text-align: center;">Reset Your Password</h3>
        <form asp-action="ResetPassword" method="post" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Token" />

            <div class="form-group mb-4">
                <label asp-for="Email" class="form-label" style="color: #081828;">Email Address</label>
                <input asp-for="Email" class="form-control" style="font-size: 14px; padding: 10px; border: 1px solid #ddd;" />
                <span asp-validation-for="Email" class="text-danger" style="font-size: 13px;"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Password" class="form-label" style="color: #081828;">New Password</label>
                <input asp-for="Password" class="form-control" type="password" style="font-size: 14px; padding: 10px; border: 1px solid #ddd;" />
                <span asp-validation-for="Password" class="text-danger" style="font-size: 13px;"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="ConfirmPassword" class="form-label" style="color: #081828;">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" style="font-size: 14px; padding: 10px; border: 1px solid #ddd;" />
                <span asp-validation-for="ConfirmPassword" class="text-danger" style="font-size: 13px;"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn" style="background-color: #0167F3; color: white; padding: 10px 25px; border-radius: 5px; font-size: 14px; font-weight: 500; border: none;">
                    Reset Password
                </button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

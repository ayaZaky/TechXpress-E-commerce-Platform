@model TechXpress_E_commerce_Platform.View_Models.ForgotPasswordVM
@{
    ViewData["Title"] = "Forgot Password";
}

<section class="forgot-password-section mt-100" style="background: #f9f9f9; padding: 40px 0;">
    <div class="container" style="max-width: 600px; margin: auto; background: white; padding: 40px; border-radius: 8px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);">
        <h3 style="margin-bottom: 30px; color: #081828; text-align: center;">Forgot Your Password?</h3>
        <p style="text-align: center; margin-bottom: 25px;">Enter your email address and we’ll send you a link to reset your password.</p>

        <form asp-action="ForgotPassword" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div class="form-group mb-4">
                <label asp-for="Email" class="form-label" style="color: #081828;">Email Address</label>
                <input asp-for="Email" class="form-control" style="font-size: 14px; padding: 10px; border: 1px solid #ddd;" />
                <span asp-validation-for="Email" class="text-danger" style="font-size: 13px;"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn" style="background-color: #0167F3; color: white; padding: 10px 25px; border-radius: 5px; font-size: 14px; font-weight: 500; border: none;">
                    Send Reset Link
                </button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
